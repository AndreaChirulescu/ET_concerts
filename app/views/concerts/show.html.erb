<div class="page-header">
  <h1>Venue : <%= @concert.venue.name %></h1>
</div>
<div class="col-lg-6 pull-left">
  <div class="panel panel-primary">
    <div class="panel-heading">Concert info</div>
    <div class="panel-body">
      <div class="form-group">
        <%= label_tag :on_date, nil, class: 'label-control' %><br>
        <%= @concert.on_date %>
      </div>
      <div class="form-group">
        <%= label_tag :status, nil, class: 'label-control' %><br>
        <%= @concert.status.name %>
      </div>
      <div class="form-group">
        <%= label_tag :photo_1, nil, class: 'label-control' %><br>
        <%= User.find(@concert.photo1).email if @concert.photo1 %>
      </div>
      <div class="form-group">
        <%= label_tag :photo_2, nil, class: 'label-control' %><br>
        <%= User.find(@concert.photo2).email if @concert.photo2 %>
      </div>
      <div class="form-group">
        <%= label_tag :text_1, nil, class: 'label-control' %><br>
        <%= User.find(@concert.text1).email if @concert.text1 %>
      </div>
      <div class="form-group">
        <%= label_tag :text_2, nil, class: 'label-control' %><br>
        <%= User.find(@concert.text2).email if @concert.text2 %>
      </div>
      <div class="form-group">
        <%= label_tag :interview, nil, class: 'label-control' %><br>
        <%= User.find(@concert.interview).email if @concert.interview %>
      </div>
      <div class="form-group">
        <%= label_tag :bands, nil, class: 'label-control' %><br>
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Country</th>
            </tr>
          </thead>
          <tbody>
            <% @concert.bands.each do |band| %>
            <tr>
              <td><%= band.name %></td>
              <td><%= band.country.name if band.country %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
