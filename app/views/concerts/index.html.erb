<div class="page-header">
  <h1>Concerts</h1>
</div>
<div class="row col-lg-12 col-md-12 col-sm-12">
  <div class="panel panel-default">
    <div class="panel-heading">Search</div>
    <div class="panel-body">
      <%= form_for concerts_path, remote: true, method: :get do |f| %>
        <div class="form-group">
          <%= f.label :status %>
          <%= f.collection_select params[:status_id], Status.all, :id, :name, class: "form-control"  %>
        </div>
        <div class="form-group">
          <%= f.submit "Search", class: "btn btn-md btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row col-lg-12 col-md-12 col-sm-12">
  <%= render 'concerts/index', collection: @concerts %>
</div>
<div class="col-lg-12 text-right">
  <%#= will_paginate @concerts %>
</div>
