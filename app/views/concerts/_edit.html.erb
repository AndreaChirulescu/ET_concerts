<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">Edit concerto</h4>
    </div>
    <div class="modal-body">
      <%= form_for @concert, remote: true do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
        <div class="form-group">
          <%= f.label :venue_id, class: 'control-label' %>
          <%= f.collection_select :venue_id, Venue.all, :id, :name, {include_blank: true}, placeholder: "Select venue", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :on_date %>
          <%= f.date_select :on_date, class: "form-control", :autocomplete => "off" %>
        </div>
        <div class="form-group">
          <%= f.label :status_id %>
          <%= f.collection_select :status_id, Status.all, :id, :name, {include_blank: true}, placeholder: "Select status", class: "form-control" %>
        </div>
        <%= f.fields_for :concert_lists do |c| %>
          <div class="form-group">
            <%= c.hidden_field :concert_id, value: @concert.id %>
            <%= c.label :band_id, class: 'label-control' %>
            <%= c.collection_select :band_id, Band.all, :id, :name, class: "form-control selectize" %>
          </div>
        <% end %>
        <%= f.submit %>
        <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>      
    </div>

  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
