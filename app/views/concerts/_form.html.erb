<div class="form-group">
  <%= f.label :venue_id %>
  <%= f.select :venue_id, Venue.all, {include_blank: true}, placeholder: "Select venue", class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :on_date %>
  <%= f.text_field :on_date, class: "datepicker form-control" %>
</div>
<div class="form-group">
  <%= f.label :status_id %>
  <%= f.select :status_id, Status.all, {include_blank: true}, placeholder: "Select status", class: "form-control" %>
</div>
<div class="panel panel-default">
  <div class="panel-heading">Add bands</div>
  <div class="panel-body">
    <%= f.fields_for :bands do |c| %>
      <div class="form-group">
        <%= c.label :band_id %>
        <%= c.select :band_id, Band.all, {include_blank: true}, placeholder: "Select band", class: "form-control" %>
      </div>
    <% end %>
  </div>
</div>
