<div class="page-header">
  <h1>Statuses</h1>
</div>
<div class="row col-lg-10 col-lg-offset-1">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Color</th>
        <th>Actions</th>
      </tr>      
    </thead>
    <tbody>
      <% @statuses.each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><div style="width:20px; height:20px; background-color: <%= status.color %>;"></div></td>
        <td><%= link_to "Edit", edit_status_path(status) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>