<div class="modal-body">
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, class: 'form-control', data: {
      :validation => "required",
      "validation-error-msg" => "This field is required."
    } %>

  </div>
  <div class="form-group">
    <label>Alpha 2</label>
    <%= f.text_field :alpha2, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Alpha 3</label>
    <%= f.text_field :alpha3, class: 'form-control' %>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  <%= f.submit "Save band", class: "btn btn-primary" %>
</div>
