<script>
$(document).ready(function () {
  $("select#band_country_id").selectize();
});

</script>
<div class="modal-body">
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", data: {
      :validation => "required",
      "validation-error-msg" => "Band name is required."
      } %>
  </div>
  <div class="form-group">
    <%= f.label :country_id %>
    <%= f.collection_select :country_id, Country.all, :id, :name, include_blank: "Select country", class: "form-control", data: {
      :validation => "selected",
      "validation-error-msg" => "Country is required."
      } %>

  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  <%= f.submit "Save band", class: "btn btn-primary" %>
</div>
