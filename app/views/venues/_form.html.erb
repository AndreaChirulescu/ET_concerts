<div class="modal-body">
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", data: {
      :validation => "required",
      "validation-error-msg" => "Status name is required."
      } %>
    <span class="help-block"></span>
  </div>
  <div class="form-group">
    <%= f.label :country_id %>
    <%= f.select :country_id, Country.all, {include_blank: true}, placeholder: "Select country", class: "form-control" %>
    <span class="help-block"></span>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  <%= f.submit "Save venue", class: "btn btn-primary" %>
</div>
